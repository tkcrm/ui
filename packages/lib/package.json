{
  "name": "@tkcrm/ui",
  "version": "0.0.8",
  "description": "Tailwind React UI components",
  "title": "TKCRM UI",
  "keywords": [
    "tkcrm",
    "ui",
    "component",
    "components",
    "design",
    "framework",
    "frontend",
    "react",
    "react-component",
    "tailwind",
    "form",
    "mobx",
    "mobx-keystone"
  ],
  "scripts": {
    "quick-build": "tsc",
    "copy-root-files": "shx cp ../../README.md . && shx cp ../../LICENSE .",
    "build": "npm run quick-build && npm run copy-root-files && vite build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tkcrm/ui.git"
  },
  "author": "sxwebdev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tkcrm/ui/issues"
  },
  "homepage": "https://github.com/tkcrm/ui#readme",
  "source": "./src/index.ts",
  "exports": {
    "./package.json": "./package.json",
    "./dist/style.css": "./dist/style.css",
    ".": {
      "import": {
        "webpack": "./dist/index.es.js",
        "default": "./dist/index.es.mjs"
      },
      "require": "./dist/index.cjs.js",
      "script": "./dist/index.cjs.js",
      "default": "./dist/index.es.mjs"
    }
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "@headlessui/react": ">=1.7.3",
    "@heroicons/react": ">=2.0.12",
    "classnames": "^2",
    "dayjs": ">=1.11",
    "fastest-validator": ">=1.12",
    "lodash": "^4",
    "mobx": "^6",
    "mobx-keystone": ">=1.1.1",
    "mobx-react-component": ">=2.7",
    "rc-field-form": ">=1.27.2",
    "rc-motion": "^2.2",
    "rc-util": "^5.20",
    "react": "^17 || ^18",
    "react-dom": "^17 || ^18",
    "react-router-dom": "^6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@headlessui/react": "^1.7.11",
    "@heroicons/react": "^2.0.16",
    "@rollup/plugin-typescript": "^11.0.0",
    "@tailwindcss/forms": "^0.5.3",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.14.0",
    "@types/rollup-plugin-visualizer": "^4.2.1",
    "@types/tailwindcss": "^3.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.13",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.7",
    "fastest-validator": "^1.16.0",
    "lodash": "^4.17.21",
    "mobx": "^6.8.0",
    "mobx-keystone": "^1.3.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "rc-field-form": "^1.27.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "rollup-plugin-typescript2": "^0.34.1",
    "rollup-plugin-visualizer": "^5.9.0",
    "shx": "^0.3.4",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5",
    "vite": "^4.1.3"
  }
}
